# ------------------------- #
# --- TELEGRAM SETTINGS --- #
# ------------------------- #

# Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=TGBOT_TOKEN_HERE

# The numeric User ID of the bot administrator (you). Commands only work for this user.
ADMIN_USER_ID= YOUR_USER_ID_HERE

# ------------------------- #
# --- API SERVER CONFIG --- #
# ------------------------- #

# API Server Configuration
API_PORT=3000
API_BASE_URL=http://localhost:3000
NODE_ENV=development

# Proxy Configuration (for deployment behind reverse proxies like Vercel, Nginx, etc.)
# Set to 'true' or '1' in production when behind a proxy
TRUST_PROXY=false

# CORS Configuration - Add your domain for production
ALLOWED_ORIGIN=http://localhost:8080

# Additional allowed origins (comma-separated)
# ADDITIONAL_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Development Server Port
DEV_SERVER_PORT=8080

# JWT Configuration (optional - auto-generated if not provided)
JWT_SECRET=your_jwt_secret_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# -------------------- #
# --- AI & NLP API --- #
# -------------------- #

# Your API key for the NLP service (e.g., OpenAI)
OPENAI_API_KEY= YOUR_OPENAI_API_KEY_HERE

# ----------------- #
# --- DATABAS E --- #
# ----------------- #

# Path to the SQLite database file. Defaults to './moderator.db' if not set.
# DATABASE_PATH=/path/to/your/data/moderator.db

# ------------------------- #
# --- INITIAL SETTINGS ---- #
# ------------------------- #

# A comma-separated list of moderator user IDs to ignore (no spaces).
# These can also be managed via bot commands later.
# MODERATOR_IDS=12345678,98765432